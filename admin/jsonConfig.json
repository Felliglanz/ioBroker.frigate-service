{
  "type": "tabs",
  "i18n": true,
  "items": {
    "global": {
      "type": "panel",
      "label": "Global",
      "items": {
        "frigateInstance": {
          "type": "text",
          "label": "Frigate instance",
          "help": "ioBroker instance id of your Frigate adapter (e.g. frigate.0).",
          "default": "frigate.0"
        },
        "frigateBaseUrl": {
          "type": "text",
          "label": "Frigate API base URL",
          "help": "Base URL for Frigate HTTP API (e.g. http://192.168.1.10:5000). Leave empty if you only use adapter states (no media downloads).",
          "default": "",
          "validator": "data.frigateBaseUrl === '' || data.frigateBaseUrl.startsWith('http://') || data.frigateBaseUrl.startsWith('https://')",
          "validatorErrorText": "URL must start with http:// or https://"
        },
        "frigateAuthType": {
          "type": "select",
          "label": "Frigate auth",
          "options": [
            { "label": "None", "value": "none" },
            { "label": "Basic", "value": "basic" },
            { "label": "Bearer", "value": "bearer" }
          ],
          "default": "none"
        },
        "frigateAuthUsername": {
          "type": "text",
          "label": "Frigate username",
          "hidden": "data.frigateAuthType !== 'basic'"
        },
        "frigateAuthPassword": {
          "type": "password",
          "label": "Frigate password",
          "hidden": "data.frigateAuthType !== 'basic'"
        },
        "frigateAuthBearerToken": {
          "type": "password",
          "label": "Frigate bearer token",
          "hidden": "data.frigateAuthType !== 'bearer'"
        },

        "_divider1": { "type": "divider", "label": "" },

        "_globalEditor": {
          "type": "custom",
          "label": "Cameras & Targets",
          "url": "custom/customComponents.js",
          "name": "FrigateServiceUI/Components/FrigateServiceGlobalEditor"
        }
      }
    },
    "items": {
      "type": "panel",
      "label": "Items",
      "items": {
        "items": {
          "type": "custom",
          "label": "Rules",
          "url": "custom/customComponents.js",
          "name": "FrigateServiceUI/Components/FrigateServiceItemsEditor"
        }
      }
    }
  }
}
