{
  "type": "tabs",
  "i18n": true,
  "items": {
    "global": {
      "type": "panel",
      "label": "Global",
      "items": {
        "frigateInstance": {
          "type": "text",
          "label": "Frigate instance",
          "help": "ioBroker instance id of your Frigate adapter (e.g. frigate.0).",
          "default": "frigate.0"
        },
        "frigateBaseUrl": {
          "type": "text",
          "label": "Frigate API base URL",
          "help": "Base URL for Frigate HTTP API (e.g. http://192.168.1.10:5000). Leave empty if you only use adapter states (no media downloads).",
          "default": ""
        },
        "frigateAuthType": {
          "type": "select",
          "label": "Frigate auth",
          "options": [
            { "label": "None", "value": "none" },
            { "label": "Basic", "value": "basic" },
            { "label": "Bearer", "value": "bearer" }
          ],
          "default": "none"
        },
        "frigateAuthUsername": {
          "type": "text",
          "label": "Frigate username",
          "hidden": "data.frigateAuthType !== 'basic'"
        },
        "frigateAuthPassword": {
          "type": "password",
          "label": "Frigate password",
          "hidden": "data.frigateAuthType !== 'basic'"
        },
        "frigateAuthBearerToken": {
          "type": "password",
          "label": "Frigate bearer token",
          "hidden": "data.frigateAuthType !== 'bearer'"
        },

        "_divider1": { "type": "divider", "label": "" },

        "cameras": {
          "type": "table",
          "label": "Cameras",
          "help": "Camera key must match frigate.0.events.after.camera (e.g. einfahrt). Display name is optional; if empty, the key will be shown prettified.",
          "items": [
            {
              "attr": "id",
              "type": "text",
              "title": "Camera key",
              "default": "",
              "placeholder": "e.g. einfahrt"
            },
            {
              "attr": "name",
              "type": "text",
              "title": "Display name",
              "default": "",
              "placeholder": "(optional) Einfahrt"
            }
          ]
        },

        "notifyTargets": {
          "type": "table",
          "label": "Notification targets",
          "help": "Use a unique Target id (e.g. kamera_einfahrt). Sensitive fields are masked in the UI. For Frigate auth fields, encryption is enabled via encryptedNative.",
          "items": [
            {
              "attr": "id",
              "type": "text",
              "title": "Target id",
              "default": "",
              "placeholder": "discord_haus"
            },
            {
              "attr": "type",
              "type": "select",
              "title": "Type",
              "default": "discordWebhook",
              "options": [
                { "label": "Discord webhook", "value": "discordWebhook" },
                { "label": "Telegram bot", "value": "telegramBot" }
              ]
            },
            {
              "attr": "webhookUrl",
              "type": "password",
              "title": "Discord webhook URL",
              "default": ""
            },
            {
              "attr": "botToken",
              "type": "password",
              "title": "Telegram bot token",
              "default": ""
            },
            {
              "attr": "chatId",
              "type": "text",
              "title": "Telegram chat id",
              "default": ""
            }
          ]
        }
      }
    },
    "items": {
      "type": "panel",
      "label": "Items",
      "items": {
        "items": {
          "type": "custom",
          "label": "Rules",
          "url": "custom/customComponents.js",
          "name": "FrigateServiceUI/Components/FrigateServiceItemsEditor"
        }
      }
    }
  }
}
